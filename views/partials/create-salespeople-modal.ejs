<div class="modal fade" id="modal-create-salespeople" data-bs-backdrop="static" data-bs-keyboard="true" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable">
        <div class="modal-content">
            <!-- Modal Header -->
            <div class="modal-header">
                <h5 class="modal-title">Create salespeople</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <form id="create-account" autocomplete="off" data-toggle="formcache">
                <!-- Modal Body -->
                <div class="modal-body">

                    <!-- require info -->
                    <div class="form-group mb-3">
                        <label for="fullName">Full Name</label>
                        <input class="form-control" name="fullName" placeholder="Enter full name" />
                    </div>

                    <div class="form-group mb-3">
                        <label for="email">Email</label>
                        <input class="form-control" name="email" placeholder="Enter email" />
                    </div>

                    <!-- option info -->
                    <div class="form-group mb-3">
                        <label for="gender">Gender</label>
                        <select class="form-control" name="gender">
                            <option value="male">Male</option>
                            <option value="female">Female</option>
                            <option value="unknown">Unknown</option>
                        </select>
                    </div>

                </div>

                <!-- Modal Footer -->
                <div class="modal-footer">
                    <!-- button handle submit or back -->
                    <!-- TODO: change icon for button -->
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-outline-primary btn-submit">Create</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="/js/custom/create-account.js"></script>