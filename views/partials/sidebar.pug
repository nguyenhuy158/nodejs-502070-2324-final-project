.container-fluid
    .row
        .col-2.bg-secondary.text-white
            // Sidebar
            .d-flex.flex-column.flex-shrink-0.p-3
                a.slide-title.d-flex.text-center.mb-3.mb-md-0.me-md-auto.text-white.text-decoration-none(href='/')
                    svg.bi.me-2(width='40' height='32')
                        image(xlink:href='/favicon.ico' alt='' width='40' height='32')
                    span.fs-4 TechHut
                hr

                ul.nav.nav-pills.flex-column.mb-auto 
                    li.nav-item
                        a.nav-link.text-white(href='/' aria-current='page')
                            svg.bi.me-2(width='16' height='16')
                                use(xlink:href='#home')
                            |                 Home
                    li.nav-item
                        a.nav-link.text-white(href='/users')
                            svg.bi.me-2(width='16' height='16')
                                use(xlink:href='#user')
                            |               Users Control
                    li.nav-item
                        a.nav-link.text-white(href='/products')
                            svg.bi.me-2(width='16' height='16')
                                use(xlink:href='#product')
                            |               Products Control
                    li.nav-item
                        a.nav-link.text-white(href='/checkout')
                            svg.bi.me-2(width='16' height='16')
                                use(xlink:href='#grid')
                            |               Checkout

                    li.nav-item
                        a.nav-link.text-white(href='#' role='button' data-bs-toggle='dropdown' aria-expanded='false')
                            svg.bi.me-2(width='16' height='16')
                                use(xlink:href='#feature')
                            |               Feature
                            ul.dropdown-menu.dropdown-menu-dark.text-small.shadow(aria-labelledby='dropdownUser1')
                                li
                                    a.dropdown-item(href='/random-product') Add 50 product random
                                li
                                    a.dropdown-item(href='/create-sample-data') Create sample data
                                li
                                    a.dropdown-item(href='/sent-test-mail') Test sent mail
                                li
                                    a.dropdown-item(href='/users/create-account') Create account

                hr
                .dropdown
                    a#dropdownUser1.d-flex.align-items-center.text-white.text-decoration-none.dropdown-toggle(href='#' data-bs-toggle='dropdown' aria-expanded='false')
                        img.rounded-circle.me-2(src=user.profilePicture alt='' width='32' height='32')
                        if (user && user.fullName)
                            b= user.fullName
                        else
                            b= 'Unknown'
                    ul.dropdown-menu.dropdown-menu-dark.text-small.shadow(aria-labelledby='dropdownUser1')
                        li
                            a.dropdown-item(href='#') New project...
                        li
                            .dropdown-item
                                .form-check.form-switch
                                    input#darkModeSwitch.form-check-input(type="checkbox" role="switch" checked=user.settings.darkMode)
                                    label.form-check-label(for="darkModeSwitch") Dark mode
                        li
                            a.dropdown-item(href='/profile') User Profile
                        li
                            hr.dropdown-divider
                        li
                            a.dropdown-item(href='/change-password') Change Password  
                        li
                            a.dropdown-item(href='/logout') Sign out
            // End of Sidebar
        .col
            // Navigation Bar
            include nav
            .container.mt-4
                block content
            // End of Navigation Bar
