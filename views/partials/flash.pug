- console.log("=>(flash.pug:4) messages", messages);

.toast-container.top-0.end-0.p-3
    - if (typeof messages !== 'undefined' && messages.error)
        each msg in messages.error
            - console.log("=>(flash.pug:6) msg", msg);
            #liveToast.toast(role='alert', aria-live='assertive', aria-atomic='true')
                .toast-header
                    img.rounded.me-3(src='/images/TechHut.png', width='20', height=20 alt='')
                    strong.me-auto TechHut
                    small
                    button.btn-close(data-bs-dismiss='toast', aria-label='Close')
                .toast-body
                    =msg
    - if (typeof messages !== 'undefined' && messages.success)
        #liveToast.toast(role='alert', aria-live='assertive', aria-atomic='true')
                .toast-header
                    img.rounded.me-3(src='/images/TechHut.png', width='20', height=20 alt='')
                    strong.me-auto TechHut
                    small
                    button.btn-close(data-bs-dismiss='toast', aria-label='Close')
                .toast-body
                    =messages.success


