extends ../layout.pug

block content
	.content
		include ../../partials/nav
		link(rel="stylesheet", href="/css/users.css")
		.container
			h2 User List
			#button-container.mb-3

			table#user-table.table.table-sm.table-striped.table-bordered.align-middle(style="width:100%")
				thead.align-middle
					tr
						th STT
						th Avatar
						th Email
						th Username
						th Full Name
						th Role
						th First Login
						th Active
						th 
							span.iconify(data-icon="material-symbols:lock-outline")
						th Handle
				tbody

		//- confirm modal
		include ../../partials/confirm-delete-modal
		include ../../partials/product-edit-modal

	//- confirm script
	script(src="/js/confirm-user.js") 
	//- script Datatables plugin
	script(src="/js/user-datatable.js") 
