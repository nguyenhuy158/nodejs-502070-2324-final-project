extends ../layout.pug
block content
    .content   
        include ../../partials/nav
        link(rel="stylesheet" href="/css/profile.css")
        .container
            h4.font-weight-bold.py-3.px-3 User Information
            .main-body
                .row.gutters-sm
                    .col-md-4.mb-3
                        .card
                        .card-body
                            .align-items-center.text-center
                                a.image-popup(href=user.profilePicture title=user.fullName)
                                    +renderProfilePicture(user.profilePicture)
                                .mt-3
                                    //- h4 John Doe
                                    button.btn.btn-primary(type='button' data-bs-toggle='modal' data-bs-target='#changeProfilePicModal') Change Avatar
                                    //- p.text-secondary.mb-1 Full Stack Developer
                                    //- p.text-muted.font-size-sm Bay Area, San Francisco, CA
                                    //- button.btn.btn-outline-primary Message
                        .card.mt-3
                            ul.list-group.list-group-flush
                                a(href="/profile") 
                                    li.list-group-item.d-flex.justify-content-between.align-items-center.flex-wrap
                                        h6.mb-0 
                                            svg.feather.feather-globe.mr-2.icon-inline(xmlns='http://www.w3.org/2000/svg' width='24' height='24' viewbox='0 0 24 24' fill='none' stroke='currentColor' stroke-width='2' stroke-linecap='round' stroke-linejoin='round')
                                                circle(cx='12' cy='12' r='10')
                                                line(x1='2' y1='12' x2='22' y2='12')
                                                path(d='M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z')
                                            | Website
                                        span.text-secondary https://TechHut.com
                                a(href="https://gitlab.duthu.net/S52000668/nodejs-502070-2324-final-project") 
                                    li.list-group-item.d-flex.justify-content-between.align-items-center.flex-wrap
                                        h6.mb-0
                                            svg.feather.feather-github.mr-2.icon-inline(xmlns='http://www.w3.org/2000/svg' width='24' height='24' viewbox='0 0 24 24' fill='none' stroke='currentColor' stroke-width='2' stroke-linecap='round' stroke-linejoin='round')
                                                path(d='M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22')
                                            | Github
                                        span.text-secondary NodeJS Final Project
                                a(href="https://www.facebook.com/nguyenhuy158") 
                                    li.list-group-item.d-flex.justify-content-between.align-items-center.flex-wrap
                                        h6.mb-0
                                            svg.feather.feather-facebook.mr-2.icon-inline.text-primary(xmlns='http://www.w3.org/2000/svg' width='24' height='24' viewbox='0 0 24 24' fill='none' stroke='currentColor' stroke-width='2' stroke-linecap='round' stroke-linejoin='round')
                                                path(d='M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z')
                                            | Facebook
                                        span.text-secondary nguyenhuy158
                    .col-md-8
                        .card.mb-3
                            .card-body
                                .row
                                .col-sm-3
                                    h6.mb-0 Email
                                .col-sm-9.text-secondary
                                    | #{user.email}
                                hr
                                .row
                                .col-sm-3
                                    h6.mb-0 User Name
                                .col-sm-9.text-secondary
                                    | #{user.username}
                                hr
                                .row
                                .col-sm-3
                                    h6.mb-0 Full Name
                                .col-sm-9.text-secondary
                                    | #{user.fullName}
                                hr
                                .row
                                .col-sm-3
                                    h6.mb-0 Role
                                .col-sm-9.text-secondary
                                    | #{user.role}
                                hr
                                .row
                                    .col-sm-12
                                        a.btn.btn-info(href="/change-password") change password
                                        
            

                        .row.gutters-sm
                            .col-sm-6.mb-3
                                .card.w-100
                                    .card-body
                                        h6.d-flex.align-items-center.mb-3
                                            i.material-icons.text-info.mr-2 Project Status
                                        small Web Design
                                        .progress.mb-3(style='height: 5px')
                                            .progress-bar.bg-primary(role='progressbar' style='width: 80%' aria-valuenow='80' aria-valuemin='0' aria-valuemax='100')
                                        small Website Markup
                                        .progress.mb-3(style='height: 5px')
                                            .progress-bar.bg-primary(role='progressbar' style='width: 72%' aria-valuenow='72' aria-valuemin='0' aria-valuemax='100')
                                        small Mobile Template
                                        .progress.mb-3(style='height: 5px')
                                            .progress-bar.bg-primary(role='progressbar' style='width: 55%' aria-valuenow='55' aria-valuemin='0' aria-valuemax='100')
                            .col-sm-6.mb-3
                                .card.w-100
                                    .card-body
                                        h6.d-flex.align-items-center.mb-3
                                            i.material-icons.text-info.mr-2 Member
                                        small Pham Quoc Anh
                                        .progress.mb-3(style='height: 5px')
                                            .progress-bar.bg-primary(role='progressbar' style='width: 88%' aria-valuenow='80' aria-valuemin='0' aria-valuemax='100')
                                        small Luong Gia Bao
                                        .progress.mb-3(style='height: 5px')
                                            .progress-bar.bg-primary(role='progressbar' style='width: 77%' aria-valuenow='72' aria-valuemin='0' aria-valuemax='100')
                                        small Nguyen Tran Quang Huy
                                        .progress.mb-3(style='height: 5px')
                                            .progress-bar.bg-primary(role='progressbar' style='width: 94%' aria-valuenow='55' aria-valuemin='0' aria-valuemax='100')
                                        


            .modal.fade(id='changeProfilePicModal' tabindex='-1' aria-labelledby='changeProfilePicModalLabel' aria-hidden='true')
                .modal-dialog.modal-dialog-centered
                    .modal-content
                        form(action='/upload-profile-pic' method='POST' enctype='multipart/form-data' autocomplete="off" data-toggle="formcache")
                            .modal-header
                                h5.modal-title#changeProfilePicModalLabel Change Profile Picture
                                button.btn-close(type='button' data-bs-dismiss='modal' aria-label='Close')
                            .modal-body
                                input.form-control(type='file' name='profilePic' accept='image/*', required)
                            .modal-footer
                                button.btn.btn-secondary(type='button' data-bs-dismiss='modal') Close
                                button.btn.btn-primary(type='submit') Save
