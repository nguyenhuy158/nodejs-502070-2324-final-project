extends ../layout.pug

block content
	.content
		include ../../partials/nav
		link(rel="stylesheet", href="/css/product.css")
		// Table plugin
		.container
			h2 Product List
			#button-container.mb-3

			table#product-table.table.table-responsive.table-striped.table-bordered.table-rounded.rounded.align-middle(style="width:100%")
				thead.align-middle
					tr
						th STT
						th Barcode
						th(data-priority="1") Product Name
						th Import Price
						th(data-priority="1") Retail Price
						th Category
						th(data-priority="1") Thumbnail
						th(data-priority="1") Handle
				tbody

				//- tfoot 
				//- 	tr 
				//- 		th STT
				//- 		th Barcode
				//- 		th Product Name
				//- 		th Import Price
				//- 		th Retail Price
				//- 		th Category
				//- 		th Thumbnail
				//- 		th Handle


		//- confirm modal
		include ../../partials/confirm-delete-modal
		include ../../partials/product-edit-modal


	//- script for confirming 
	script(src="js/confirm-product.js")
	//- script load data to table
	script(src="/js/product-datatable.js") 





