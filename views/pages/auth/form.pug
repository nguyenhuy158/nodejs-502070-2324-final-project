include ../../partials/html
include ../../partials/flash

link(rel="stylesheet" href="/css/form.css")
link(rel="stylesheet", href="https://unicons.iconscout.com/release/v2.1.9/css/unicons.css")

.section
    .container
        .row.full-height.justify-content-center
            .col-12.text-center.align-self-center.py-5
                .section.pb-5.pt-5.pt-sm-2.text-center
                    .card-3d-wrap.mx-auto
                        .card-3d-wrapper
                            .card-content
                                .center-wrap
                                    .section.text-center
                                        form(method='post' action= isRegister ? '/register' : '/login')
                                            h4.mb-4.pb-3 Register/Login
                                            .form-group
                                                input#username.form-style(type='text'
                                                    name='username' placeholder='Your Name'
                                                    autocomplete='off', focus)
                                                i.input-icon.uil.uil-at
                                            if isRegister
                                                input#email.form-style(type='email' name='email' placeholder='Your Email' autocomplete='off')
                                                i.input-icon.uil.uil-at
                                            .form-group.mt-2
                                                input#password.form-style(type='password' name='password' placeholder='Your Password' autocomplete='off')
                                                i.input-icon.uil.uil-lock-alt
                                            if error
                                                .text-danger.mb-3.alert.alert-danger
                                                    span=error
                                            button.btn.mt-4(type='submit') Login
                                            p.mb-0.mt-4.text-center
                                                a.text-decoration-none.link(href='/password-reset')
                                                    | Forgot your password?


script.
    $(document).ready(function () {
        $('#username').focus();
    });
