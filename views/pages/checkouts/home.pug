extends ../layout

block content 
	.content
		include ../../partials/nav
		link(rel="stylesheet" href="/css/checkout.css")
		.container
			h1.heading
				ion-icon(name='cart-outline') 
				|       Checkout
			.item-flex

				//- customer information
				section.checkout     
					h2.section-heading Checkout Details
					.payment-form
						form#customer-info(role='form' action='/checkout' method='post' data-toggle="formcache")
							.phoneNumber-form
								label.label-default(for='input-phone') Phone
								.input-group
									input#phone-number.input-default.form-control(name='phone' type='text')
									button#load-customer.btn.btn-outline-secondary(type='button')
										i.bx.bx-loader.bx-spin.bx-rotate-90
							.fullName-form
								label.label-default(for='full-name') Full Name
									input#fullname.input-default(name='fullName' type='text' value='')
							.address-form-regions
								label.label-default(for='address') Regions
									select#regions.form-select(name='regions')
							.address-form-districts
								label.label-default(for='address') Districts
									select#districts.form-select(name='districts')

							.address-form-wards
								label.label-default(for='address') Wards
									select#wards.form-select(name='wards')

							.address-form-detail
								label.label-default(for='address') Wards
									select#wards.form-select(name='address')

							.note-form
								label.label-default(for='note') Note
									input#note.input-default(name='note' type='text' value='' cols="30" rows="5")

							label.form-label(for="given-money") Given money:
							input.form-control#input-given-money(name="givenMoney" type="number" placeholder="Enter given money")

					button.btn.btn-primary.btn-checkout(disabled) Checkout

				//- view product list in cart
				section.cart 
					.cart-item-box
						h2.section-heading Product Summary 

						label.form-label(for="given-money") Search products:
						input.form-control#search-product(type="number" placeholder="Search products")


						button.btn.btn-sm.btn-outline-secondary#load-product load product in cart
						#products-container
							//- product list

					.wrapper
						.discount-token
							label.label-default(for='discount-token') Gift Card / Discount code
							.wrapper-flex
								input#discount-token.input-default(name='discount-token' type='text' value='')
								button.btn.btn-outline Apply
						.amount
							.subtotal
								span Have to pay
								span 
									span#total-money 0 ₫

							.shipping
								span Money given by guests
								span 
									span#given-money 0 ₫
							.total
								span Exchange
								span 
									span#exchange-money 0 ₫

	script(src="/js/checkout.js")
