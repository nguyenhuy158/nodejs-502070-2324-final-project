extends layout

block content
    link(rel="stylesheet" href="/css/home.css")
    .container
        .row
            .col
                .card()
                    img.card-img-top(src="https://placehold.co/100?text=Empty&font=roboto", alt="...")
                    .card-body
                        h5.card-title Product list
                        p.card-text Product list
                        a.btn.btn-primary(href="#") Go

            .col-6
                #carouselExampleCaptions.carousel.slide(data-bs-ride="carousel")
                    .carousel-indicators
                        for product, index in products
                            button(type="button", class=!index ? "active" : '' data-bs-target="#carouselExampleCaptions", data-bs-slide-to=index, aria-label=`Slide ${index}`)
                    .carousel-inner
                        for product, index in products
                            .carousel-item(class=!index ? "active" : '')
                                img(src=product.imageUrls[0], class="d-block w-100", alt=product.desc)
                                .carousel-caption.d-none.d-md-block
                                    h5= product.productName
                                    p= product.desc
                    button.carousel-control-prev(type="button", data-bs-target="#carouselExampleCaptions", data-bs-slide="prev")
                        span.carousel-control-prev-icon(aria-hidden="true")
                        span.visually-hidden Previous
                    button.carousel-control-next(type="button", data-bs-target="#carouselExampleCaptions", data-bs-slide="next")
                        span.carousel-control-next-icon(aria-hidden="true")
                        span.visually-hidden Next

            .col
                .card()
                    img.card-img-top(src="https://placehold.co/100?text=Empty&font=roboto", alt="...")
                    .card-body
                        h5.card-title Card
                        p.card-text Card.
                        a.btn.btn-primary(href="#") Go
    script.
        const myCarouselElement = document.querySelector('#carouselExampleCaptions');
        const carousel = new bootstrap.Carousel(myCarouselElement, {
            interval: 2000,
            wrap    : true,
        });

